<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>
    
    
         <!-- Actionbar style -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
         <!-- 自定义返回按钮图标 -->
        <item name="android:homeAsUpIndicator">@drawable/wd007</item>
    </style>
    
    <style name="CustomActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">

        <!-- Change action bar background color -->
        <item name="android:background">@color/white</item>
        <!-- Change split action bar background color -->
        <item name="android:backgroundSplit">@color/white</item>
        <item name="android:titleTextStyle">@style/CustomTitleTextStyle</item>
    </style>

    <style name="CustomTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">

        <!-- Change action bar title color -->
        <item name="android:textColor">@color/blue</item>
    </style>
   
    
    <style name="uset_information_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/my_infomation_option_item_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/space_4</item>
    </style>

    <style name="user_formation_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="user_formation_info" parent="@style/user_formation_text">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="list_text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/space_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_text_subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/space_5</item>
    </style>

    <style name="list_text_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/space_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
    
       <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
</resources>
