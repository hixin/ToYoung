<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lgoin_bg"
    android:gravity="bottom"
    tools:context=".RegisterActivity" >
    <FrameLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         
         android:layout_marginBottom="30dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            
            >
        <LinearLayout 
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@drawable/register_bg"
            >
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="登录ID"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_account"
                        android:background="@null"
                        />
                    <ImageView
                       android:id="@+id/im_account_message" 
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/login_checked_success"
                       android:layout_gravity="center_vertical"
                 />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
            </RelativeLayout>  
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="密   码"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_password"
                        android:password="true"
                         android:background="@null"
                        />
                    <ImageView
                       android:id="@+id/im_message" 
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/login_checked_success"
                       android:layout_gravity="center_vertical"
                       android:visibility="gone"
                 />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="确认密码"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_confrim_password"
                        android:password="true"
                         android:background="@null"
                        />
                    <ImageView
                       android:id="@+id/im_message" 
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/login_checked_success"
                       android:layout_gravity="center_vertical"
                       android:visibility="gone"
                 />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginTop="10dp"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="性别"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <Button
                       android:id="@+id/btn_man" 
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/man_selected_icon"
                       android:layout_gravity="center_vertical"
                 />
                    <Button
                       android:layout_marginLeft="20dp"
                       android:id="@+id/btn_women" 
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/women_normal_icon"
                       android:layout_gravity="center_vertical"
                 />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="昵称"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/ev_nickName"
                         android:background="@null"
                        />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="学校"
                      android:layout_gravity="center_vertical"
                      
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/ev_address"
                         android:background="@null"
                        />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:gravity="center"
                >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                    >
                    <TextView
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:text="所在地"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/homepage_icon_text_blue_color"
                        />
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/ev_schoolAddress"
                         android:background="@null"
                        />
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="wrap_content"
              
                >
                 <View 
			          android:background="@color/homepage_icon_text_blue_color"
			          android:layout_height="1dp"
			          android:layout_width="160dp"
			          android:layout_marginLeft="60dp"
         />
        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            >
             <Button
                 android:layout_width="80dp"
                 android:layout_height="40dp"
                 android:id="@+id/btn_cancel"
                 android:text="取消"
                 android:layout_alignParentLeft="true"
                 android:textColor="@drawable/login_btn_text_bg"
                 
                 android:background="@drawable/login_btn_bg"
                 /> 
                 <Button
                 android:layout_width="80dp"
                 android:layout_height="40dp"
                 android:id="@+id/btn_OK"
                 android:text="确认"
                 android:layout_alignParentRight="true"
                 android:textColor="@drawable/login_btn_text_bg"
                 android:background="@drawable/login_btn_bg"
                 /> 
            </RelativeLayout>
        </LinearLayout>
      
    </FrameLayout>
   

</RelativeLayout>
