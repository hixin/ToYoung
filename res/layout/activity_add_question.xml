<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AddQuestionActivity" >
    <RelativeLayout
         android:id="@+id/top"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         >
         <Button 
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_btn_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
         />
         <TextView 
             android:text="发布问题"
             android:textColor="@color/homepage_icon_text_blue_color"
             android:gravity="center"
             android:layout_height="fill_parent"
             android:layout_width="wrap_content"
             android:textSize="20sp"
             android:layout_centerInParent="true"
             />
         <Button 
            android:id="@+id/btn_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/publish_btn_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
         />
     </RelativeLayout>
     <View
         android:id="@+id/top_line"
         android:layout_below="@+id/top"
         android:layout_width="fill_parent"
         android:layout_height="2dp"
         android:background="@color/gray_bg"
         />
      <EditText
         android:id="@+id/tv_title"
         android:layout_height="40dp"
         android:layout_width="fill_parent"
         android:hint="编辑问题标题"
         android:gravity="top"
         android:textSize="15sp"
         android:background="@null"
         />
      <View
         android:layout_width="fill_parent"
         android:layout_height="15dp"
         android:background="@color/gray_bg"
         />
     <EditText
         android:id="@+id/tv_content"
         android:layout_height="100dp"
         android:layout_width="fill_parent"
         android:hint="编辑问题内容"
         android:gravity="top"
         android:textSize="15sp"
         android:background="@null"
         />
     <View
         android:layout_width="fill_parent"
         android:layout_height="15dp"
         android:background="@color/gray_bg"
         />
     <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
         >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:orientation="horizontal"
             android:layout_marginLeft="20dp"
             android:layout_alignParentLeft="true"
             >
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="25dp"
                 android:src="@drawable/label_bg"/>
             <TextView
                 android:text="标签" 
                 android:layout_height="30dp"
                 android:layout_width="wrap_content"
                 android:textSize="15sp"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_marginLeft="10dp"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:orientation="horizontal"
             android:layout_marginRight="20dp"
             android:layout_alignParentRight="true"
             android:gravity="center_vertical"
             >
             <TextView
                 android:id="@+id/tv_tag"
                 android:text="交通住宿" 
                 android:layout_height="30dp"
                 android:layout_width="wrap_content"
                 android:textSize="15sp"
                 android:textColor="@color/homepage_icon_text_gray_color"
                 android:gravity="center"
                 android:layout_marginLeft="10dp"
                 />
            <Button 
            android:id="@+id/btn_narrow"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:background="@drawable/narrow"
            android:layout_marginLeft="10dp"
         />
         </LinearLayout>
     </RelativeLayout>
     <RelativeLayout
           android:id="@+id/rl_tags"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:visibility="gone"
           android:background="@color/homepage_icon_question__color"
         >
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
             <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                 >
                 <Button
                    android:id="@+id/btn_tag_0"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="交通住宿"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/tag_bg"
                     />
                 <Button
                      android:id="@+id/btn_tag_1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="考试心得"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                     android:background="@drawable/tag_bg"
                     />
                 <Button
                      android:id="@+id/btn_tag_2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="学校申请"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                     android:textColor="@color/white"
                     android:background="@drawable/tag_bg"
                     />
             </LinearLayout>
             <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                 >
                 <Button
                    android:id="@+id/btn_tag_3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="吃喝指南"
                    android:textSize="14sp"
                    android:gravity="center"
                     android:textColor="@color/white"
                    android:background="@drawable/tag_bg"
                     />
                 <Button
                      android:id="@+id/btn_tag_4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="留学情感地"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                     android:textColor="@color/white"
                     android:background="@drawable/tag_bg"
                     />
                 <Button
                      android:id="@+id/btn_tag_5"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="文化观察"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                     android:textColor="@color/white"
                     android:background="@drawable/tag_bg"
                     />
             </LinearLayout>
             <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                 >
                 <Button
                      android:id="@+id/btn_tag_6"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="寻找小伙伴"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/tag_bg"
                     android:textColor="@color/white"
                     />
                 <Button
                      android:id="@+id/btn_tag_7"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="就业打工"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                     android:background="@drawable/tag_bg"
                      android:textColor="@color/white"
                     />
                 <Button
                    android:id="@+id/btn_tag_8"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="其他问题"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                     android:background="@drawable/tag_bg"
                      android:textColor="@color/white"
                     />
             </LinearLayout>
             <LinearLayout
                  android:layout_width="270dp"
                  android:layout_height="10dp"
                  android:orientation="horizontal"
                  
                 >
                
             </LinearLayout>
         </LinearLayout>
     </RelativeLayout>
     <View
         android:layout_width="fill_parent"
         android:layout_height="15dp"
         android:background="@color/gray_bg"
         />
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         >
         <FrameLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="2dp"
             android:layout_marginLeft="10dp"
             >
             <ImageView
                 android:layout_width="80dp"
                 android:layout_height="120dp" 
                 android:background="@drawable/frame_bg"
                 />
         </FrameLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="20dp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="添加图片"
                 />
             <Button 
            android:id="@+id/btn_addpic"
            android:layout_width="50dp"
            android:layout_height="60dp"
            
            android:background="@drawable/add_pic"
           
            android:layout_marginRight="10dp"
         />
         </LinearLayout>
     </LinearLayout>
</LinearLayout>
